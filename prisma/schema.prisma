// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id     Int     @id @default(autoincrement())
  nama   String?
  alamat String
  no_hp  String

  email     String      @unique
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  Transaksi Transaksi[]
  Material  Material[]
  Trolly    Trolly?
}

model Transaksi {
  id               Int               @id @default(autoincrement())
  tgl_transaksi    DateTime
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  id_user          Int?
  User             User?             @relation(fields: [id_user], references: [id])
  status_Transaksi Status_Transaksi?
  opsi_Penukaran   Opsi_Penukaran?
  opsi_Penyerahan  Opsi_Penyerahan?
}

model Status_Transaksi {
  id           Int       @id @default(autoincrement())
  type         String
  id_transaksi Int       @unique
  Transaksi    Transaksi @relation(fields: [id_transaksi], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Opsi_Penukaran {
  id           Int       @id @default(autoincrement())
  harga        Int?
  berat        Int
  deskripsi    String
  id_transaksi Int       @unique
  Transaksi    Transaksi @relation(fields: [id_transaksi], references: [id])
  Cases        Cases[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Opsi_Penyerahan {
  id           Int       @id @default(autoincrement())
  harga        Int?
  berat        Int
  deskripsi    String
  id_transaksi Int       @unique
  Cases        Cases[]
  Transaksi    Transaksi @relation(fields: [id_transaksi], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Material {
  id        Int     @id @default(autoincrement())
  nama      String
  deskripsi String
  jumlah    Int     @default(1)
  satuan    String
  berat     Int // total semua benda yang di simpan dalam gudang
  kategori  String // total semua benda yang di simpan dalam gudang
  harga     Int     @default(0)
  id_user   Int?
  User      User?   @relation(fields: [id_user], references: [id])
  Cart_List Cases[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Trolly {
  id      Int     @id @default(autoincrement())
  id_user Int     @unique
  User    User    @relation(fields: [id_user], references: [id])
  Cases   Cases[]
}

model Cases {
  id                Int              @id @default(autoincrement())
  id_trolly         Int?
  id_material       Int?
  status            String
  opsi_PenyerahanId Int?
  opsi_PenukaranId  Int?
  Trolly            Trolly?          @relation(fields: [id_trolly], references: [id])
  Material          Material?        @relation(fields: [id_material], references: [id])
  Opsi_Penukaran    Opsi_Penukaran?  @relation(fields: [opsi_PenukaranId], references: [id])
  Opsi_Penyerahan   Opsi_Penyerahan? @relation(fields: [opsi_PenyerahanId], references: [id])
}
